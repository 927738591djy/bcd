/**index.wxss**/
page {
	background-image: linear-gradient(skyblue, #ccc);
	text-align: center;
	display: flex;
	justify-content: center;
}

.index_container {
	left: 50%;
	transform: translate(-50%, -50%);
	position: fixed;
	bottom: 60rpx;
	display: flex;
	width: 100%;
	justify-content: space-around;
	font-size: 35rpx;
	font-weight: 600;
}

.company {
	padding: 80rpx 60rpx;
	border-radius: 30rpx;
	color: #fff;
	border: 5rpx solid #fff;
	animation: animated-border 1.5s infinite;
	position: relative;
}

.sent {
	padding: 80rpx 60rpx;
	border-radius: 30rpx;
	color: #fff;
	border: 5rpx solid #fff;
	animation: animated-border 1.5s infinite;
	position: relative;
}

.logo {
	width: 300rpx;
	height: 300rpx;
	margin-top: 200rpx;
}

@keyframes animated-border {
	0% {
		box-shadow: 0 0 0 0 rgba(255, 255, 255, .5);
	}

	100% {
		box-shadow: 0 0 0 20rpx rgba(255, 255, 255, 0);
	}
}

.authbtn {
	background-color: transparent;
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
}

.avatar-wrapper {
	padding: 0;
	width: 56px !important;
	border-radius: 8px;
	margin-top: 40px;
	margin-bottom: 40px;
}

.avatar {
	display: block;
	width: 56px;
	height: 56px;
}

.top-wrapper {
	margin-top: 100rpx;
}