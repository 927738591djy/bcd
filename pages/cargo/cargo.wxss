/* pages/cargo/cargo.wxss */
page {
	background-color: rgb(241, 241, 241);
}

.map {
	width: 800rpx;
	height: 800rpx;
}

.cover_view {
	border-radius: 20rpx;
	background-color: #fff;
	display: flex;
	justify-content: center;
	height: 100rpx;

}

.blue {
	background-color: #1296db;
	width: 200rpx;
	text-align: center;
	white-space: normal;
	font-size: 30rpx;
	color: #fff;
	height: 200rpx;
	line-height: 100rpx;
}

.white {
	width: 480rpx;
	white-space: normal;
	font-size: 30rpx;
	line-height:100rpx;
	height: 200rpx;
	padding-left: 10rpx;
}

.order {
	padding: 20rpx;
	font-size: 30rpx;
}

.shifu {
	flex-direction: column;
	background-color: #fff;
	border-radius: 40rpx;
	position: fixed;
	padding: 30rpx;
	width: 85%;
	margin: 0 30rpx;
	margin-top: -30rpx;
	/* animation: move 0.5s; */
}

.call {
	background-color: #1296df;
	border-radius: 30rpx;
	padding: 10rpx 30rpx;
	color: #fff;
	font-size: 35rpx;
}

