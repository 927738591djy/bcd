/**index.wxss**/
page{
	background-image: linear-gradient(skyblue, #ccc);
	text-align: center;
 }
 .index_container{
	 left: 50%;
	 transform: translate(-50%,-50%);
	 position: fixed;
	 bottom: 60rpx;
	 display: flex;
	 width: 100%;
	 justify-content: space-around;
	 font-size: 35rpx;
	 font-weight: 600;
 }
 .company{
	 padding:80rpx 60rpx;
	 border-radius: 30rpx;
	 color: #fff;
	 border: 3rpx solid #fff;
	 animation: animated-border 1.5s infinite;
 }
 .sent{
	 padding: 80rpx 60rpx;
	 border-radius: 30rpx;
	 color: #fff;
	 border: 3rpx solid #fff;
	 animation: animated-border 1.5s infinite;
 }

 @keyframes animated-border {
	0% {
		box-shadow: 0 0 0 0 rgba(255, 255, 255, .5);
	}
	100% {
		box-shadow: 0 0 0 20rpx rgba(255, 255, 255, 0);
	}
}